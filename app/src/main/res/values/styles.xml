<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimary</item>
        <item name="android:textColorLink">@color/colorPrimary</item>

        <item name="android:windowBackground">@color/backgroundDefault</item>

        <item name="toolbarTheme">@style/ThemeOverlay.AppCompat.ActionBar</item>

    </style>

    <!--================================== Widget ===============================================-->

    <!-- Toolbar =================== -->
    <style name="AppWidget.Toolbar.Title" parent="">
        <item name="android:layout_marginLeft">?attr/actionBarSize</item>
        <item name="android:layout_marginRight">?attr/actionBarSize</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAppearance">@style/AppTextAppearance.Widget.Toolbar.Title</item>
    </style>

    <!-- Text Appearance ================= -->

    <style name="AppTextAppearance.Widget.Toolbar.Title" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">@dimen/text_size_title_toolbar</item>
    </style>

    <style name="AppWidget.Button" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/bg_button</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:minHeight">@dimen/space_triple</item>
    </style>


</resources>
